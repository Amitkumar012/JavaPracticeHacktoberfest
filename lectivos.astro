import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Días NO Lectivos del CPR Cebem">
  <h1>Días NO Lectivos del CPR Cebem</h1>
  <ul id="lista-dias-no-lectivos">
    
  </ul>
</MainLayout>
<script type="module">
  async function loadDiasLectivos() {
    const diasNoLectivos = [
      "12 de octubre de 2023", 
      "1 de noviembre de 2023", 
      "6 de diciembre de 2023", 
      "8 de diciembre de 2023", 
      "25 de diciembre de 2023",
      "1 de enero de 2024", 
      "6 de enero de 2024", 
      "29 de marzo de 2024", 
      "1 de abril de 2024", 
      "1 de mayo de 2024", 
      "15 de agosto de 2024" 
    ];
    const $ul = document.getElementById('lista-dias-no-lectivos');
    $ul.innerHTML = ''; 

    diasNoLectivos.forEach(dia => {
      const $li = document.createElement('li');
      $li.textContent = dia; 
      $ul.appendChild($li);
    });
  }
  loadDiasLectivos();
</script>